{
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "allowJs": true,
      "lib": ["dom", "es6"],
      "baseUrl": "./src",
      "paths": {
        "@/*": [
          "./*"
        ]
      }
    },
    "exclude": [
      "node_modules",
    ],
    "include": [
      "**/*.ts",
    ],
    "files": [
      "src/app.ts"
    ]
}